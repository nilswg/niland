{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@/*": ["./src/*"],
      "@xqsite-schema/*": [
        "./lib/xqsite-schema/src/*"
      ]
    },
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
  },
  
  "include": ["./tailwind.config.cjs", "./src/**/*", "./lib/**/*", "src/components/react/Toast/Toasts/.tsx"],
  "exclude": ["node_modules", "dist", "./lib/xq-module-compare-sheet/dist/*", "./lib/logger/dist/*"]
}